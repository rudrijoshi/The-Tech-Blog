<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
<div class="container1">
    <div class="col-mb-4 project-blog">
        <div class="row blog-heading">
            <div class="col-md-8">
                <h2>
                    <!-- Call helper function with triple brackets to render the emoji span as HTML -->
                    <a href="/blogs/{{blog.id}}" class="blog1">{{blog.blog_name}}</a>
                </h2>
            </div>
            <div class="col-md-4">
                <p>Posted by {{blog.user.name}} on {{format_date blog.date_created}}</p>
            </div>
        </div>
        <div class="row desc1">
            <p class="desc">
                {{blog.description}}
            </p>
        </div>
    </div>
</div>
{{/each}}