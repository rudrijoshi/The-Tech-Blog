<div class="text-center">
    <h2>{{blog_name}}</h2>
    <p>{{description}}</p>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
<div class="text-center">

    <form class="form comment-form">
        <div class="form-group">
            <label for="comment-login">Comment:</label>
            <input class="form-input" type="text" id="comment-login" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit"><a href="/">
                    Submit</a>
            </button>
        </div>
    </form>
</div>